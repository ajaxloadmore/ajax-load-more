{
	"name": "ajax-load-more",
	"version": "7.6.0",
	"description": "Ajax Load More WordPress Plugin",
	"scripts": {
		"watch": "npm run dev",
		"dev": "cross-env NODE_ENV=development wp-scripts start",
		"build": "cross-env NODE_ENV=production npm run build:pot && wp-scripts build --config webpack.prod.js",
		"build:pot": "composer run pot",
		"format": "wp-scripts format && composer run format",
		"lint": "run-p lint:*",
		"lint:css": "wp-scripts lint-style --custom-syntax postcss-scss",
		"lint:js": "wp-scripts lint-js",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"lint:php": "composer run lint",
		"deploy": "mkdirp ./_out && npm run build && npm run deploy:files && npm run deploy:dirs",
		"deploy:files": "copyfiles 'ajax-load-more.php' 'README.txt' 'LICENSE.txt' 'uninstall.php' ./_out",
		"deploy:dirs": "copyfiles './admin/**/**/*' './build/**/**/*' './core**/**/*' './lang**/**/*' ./_out",
		"postinstall": "composer install"
	},
	"author": "connekt",
	"private": true,
	"main": "./src/js/ajax-load-more.js",
	"repository": {
		"private": true
	},
	"browserslist": [
		"last 2 versions",
		"ie >= 9",
		"and_chr >= 2.3"
	],
	"dependencies": {
		"crypto-js": "^4.1.1",
		"dompurify": "^3.2.6"
	},
	"devDependencies": {
		"@wordpress/block-editor": "^12.19.0",
		"@wordpress/blocks": "^12.28.0",
		"@wordpress/components": "^26.0.0",
		"@wordpress/data": "^9.21.0",
		"@wordpress/dom-ready": "^3.51.0",
		"@wordpress/i18n": "^5.14.0",
		"@wordpress/scripts": "^26.0.0",
		"@wordpress/server-side-render": "^4.28.0",
		"axios": "^1.9.0",
		"clean-webpack-plugin": "^4.0.0",
		"copy-webpack-plugin": "^11.0.0",
		"cross-env": "^7.0.3",
		"css-loader": "^6.8.1",
		"css-minimizer-webpack-plugin": "^5.0.1",
		"eslint-webpack-plugin": "^4.0.0",
		"imagesloaded": "^4.1.4",
		"mini-css-extract-plugin": "^2.7.6",
		"mkdirp": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"postcss-import": "^15.1.0",
		"postcss-loader": "^7.3.3",
		"postcss-preset-env": "^8.0.1",
		"postcss-scss": "^4.0.6",
		"prettier": "^2.8.4",
		"qs": "^6.6.0",
		"sass": "^1.63.6",
		"sass-loader": "^13.3.2",
		"style-loader": "^3.3.3",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-webpack-plugin": "^4.1.0",
		"webpack-cli": "^5.0.1",
		"webpack-merge": "^5.9.0"
	}
}
